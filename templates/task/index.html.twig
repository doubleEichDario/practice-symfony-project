{% extends 'base.html.twig' %}

{% block title %}Tareas{% endblock %}

{% block body %}

<h1 class="mb-5">Todas las tareas</h1>


<table class="table table-bordered">
  <tr>
    <th scope="col">Id</th>
    <th scope="col">Tarea</th>
    <th scope="col">Prioridad</th>
    <th scope="col">Horas presupuestadas</th>
    <th scope="col">Acciones</th>
  </tr>
  {% for task in tasks %}
    <tr>
      <td>{{ task.user.id }}</td>
      <td>{{ task.title }}</td>
      <td class="text-center">{{ task.priority }}</td>
      <td class="text-center">{{ task.hours }}</td>
      <td class="text-center">
        <a class="btn btn-sm btn-primary" href="{{ path('task_detail', {'id':task.id}) }}" role="button">Ver</a>
      </td>
    </tr>
  {% endfor %}
</table>

{% endblock %}
